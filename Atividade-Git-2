algoritmo "Primo"

var
numero:inteiro
numero2: inteiro
primo: logico
sn : caractere
quest: inteiro

inicio
quest <- 1
enquanto (quest = 1) faca
   escreval ("Digite um número")
   leia (numero)
   primo <- verdadeiro
   numero2 <- numero
   enquanto (numero2 > 1) faca
      se (numero % numero2 = 0) e(numero <> numero2 )entao
         primo <- falso
      fimse
      numero2 <- numero2 -1
   fimenquanto
   se (primo) entao
      escreval ("O número ", numero, " é primo.")
   senao
      escreval ("O número", numero, " não é primo")
   fimse
   escreval ("Deseja continuar (S/N)?")
   leia (sn)
   se (sn = "N") ou (sn = "n")  entao
      quest <- 0
   fimse
fimenquanto

fimalgoritmo
